#!/usr/bin/env python3

import argparse

parser = argparse.ArgumentParser(
    description='ETL for bibliographic data.')

parser.add_argument('--workflow', type=str,
                    help='Workflow file in yaml format',
                    required=True)

args = parser.parse_args()

if __name__ == '__main__':
    #create instance of kahi with the workflow file as a parameter
    kahi=kahi(args.workflow)
    #check if workflow could be run with the available plugins
    kahi.check_workflow()
    #run the workflow
    kahi.run()